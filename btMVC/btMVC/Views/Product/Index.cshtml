    <!-- SEARCH FORM -->
    @*ko thể tìm kiếm trên thèn <form> được nên ta chuyển sang div*@
    <div class="form-inline ml-3">
        <div class="input-group input-group-sm">
            <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search" id="ProductName">
            <div class="input-group-append">
                <button class="btn btn-navbar" id="btnSearch">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div>
    </div>
}
<div id="listProduct"></div>

<script>
    $(document).ready(function () {
        loadPartialView()
        $("#btnSearch").click(function () {
            loadPartialView()
        });
    });

    function loadPartialView() {
    var input_data = {

    }

    $.ajax({
        url: '@Url.Action("listPartialProduct", "Product")',
        type: 'GET',
        data: input_data,
        success: function (result) {
            $("#listProduct").html("");
            $("#listProduct").html(result);

        },
        error: function (data) {
            alert('Error .');
        }
    });
}
</script>

